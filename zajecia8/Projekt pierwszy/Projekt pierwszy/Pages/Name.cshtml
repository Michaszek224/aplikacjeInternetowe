@page
@model Projekt_pierwszy.Pages.NameModel
@{
    string name = null;

    if (Request.Method == "POST" &&
        Request.HasFormContentType)
    {
        name = Request.Form["name"];
    }
    if (string.IsNullOrWhiteSpace(name))
    {
        name = "Robert Paulson";
    }
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Name Page</title>
</head>
<body>
    <h1>Lista z imieniem</h1>
    <ul>
        @for (int i = 0; i < 10; i++)
        {
            <li>His name is @name</li>
        }
    </ul>
</body>
</html>